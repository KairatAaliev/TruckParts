<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EFF9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".other_fragments.history_of_accruals.HistoryOfAccrualsFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_in_history"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_backspace_button_in_appbar"
            android:src="@drawable/ic_arrow___left_4"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_history_text"
        app:layout_constraintTop_toBottomOf="@id/appbar_in_history"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_shape_8dp"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_history_of_bonus_declareter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="История начислений"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_history_of_accruals_date"
        app:layout_constraintTop_toBottomOf="@id/cl_history_text"
        android:background="@drawable/button_shape_8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <ImageView
         android:id="@+id/iv_date_icon"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_width="wrap_content"
         android:src="@drawable/ic_calendar"
         android:layout_marginTop="14dp"
         android:layout_marginStart="90dp"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginBottom="14dp"
         android:layout_height="wrap_content"
         tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_select_date_history"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_date_icon"
            android:layout_width="0dp"
            android:text="Выбрать дату"
            android:layout_marginStart="15dp"

            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history_of_accruals_view"
        app:layout_constraintTop_toBottomOf="@id/btn_history_of_accruals_date"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>